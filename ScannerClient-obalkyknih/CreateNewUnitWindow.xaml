<Window x:Class="ScannerClient_obalkyknih.CreateNewUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Založit novou jednotku" Height="160" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ObalkyKnih-scanner;component/Images/background.jpg" />
        </Grid.Background>
        <Grid>
            <Label Content="Založit novou jednotku" HorizontalAlignment="Center" Foreground="DeepSkyBlue" FontWeight="Bold" FontSize="20" Margin="0,6,0,0" Height="48" VerticalAlignment="Top" Width="233" />
            <Label Content="Zadejte čárový kód:" Height="28" HorizontalAlignment="Left" Margin="12,50,0,0" Name="label1" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="124,52,0,0" Name="barcodeTextBox" VerticalAlignment="Top" Width="120" KeyDown="BarcodeTextBox_KeyDown" />
            <Button Content="Založit" Height="23" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0" Name="newUnitButton" Width="75" Click="NewUnitButton_Click" />
        </Grid>
    </Grid>
</Window>
