        <Label Content="Nahrávání dat na server může trvat několik minut." Height="28" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" />
        <ProgressBar Height="30" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Width="254" IsIndeterminate="True" />
        <Label Content="Vydržte prosím." Height="28" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
