<Window x:Class="ScannerClient_obalkyknih.MetadataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metadatový záznam" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush Viewport="0,0,218,218" ViewportUnits="Absolute" Stretch="None" TileMode="Tile"
                        ImageSource="/ObalkyKnih-scanner;component/Images/ok-background-center.png"/>
        </Grid.Background>
        <Label Content="Plný metadatový záznam" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" 
                       Foreground="#5e5e5e" FontFamily="Arial" />

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox Name="metadataLabel" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontFamily="Arial"
                         Foreground="#5e5e5e" VerticalAlignment="Top" Margin="0,30"/>
        </ScrollViewer>
    </Grid>
</Window>
