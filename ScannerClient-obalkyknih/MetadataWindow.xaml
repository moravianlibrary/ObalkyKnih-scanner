<Window x:Class="ScannerClient_obalkyknih.MetadataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metadatový záznam" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ObalkyKnih-scanner;component/Images/background.jpg" />
        </Grid.Background>
        <ScrollViewer>
            <ItemsControl Name="itemsControl">
                <Label Content="Plný metadatový záznam" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="DeepSkyBlue" />
                <TextBox Name="metadataLabel" IsReadOnly="True"/>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
